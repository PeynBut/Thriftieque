<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/color"
    android:padding="16dp"
    tools:context="Authentication.RegisterPart2">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_backspace_24" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#71879D"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="40sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Information"/>

    <!-- Progress Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <View
            android:id="@+id/step1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/progress_inactive"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/progress_line"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:background="@color/gray"/>

        <View
            android:id="@+id/step2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/progress_active"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Phone Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Phone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:importantForAccessibility="yes"
            android:contentDescription="Phone number input"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Address Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Barangay -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_barangay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Barangay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_barangay_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                android:contentDescription="Barangay input"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Municipality -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_municipality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Municipality"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_municipality_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                android:contentDescription="Municipality input"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Country -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_country_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                android:contentDescription="Country input"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Province -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Province"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_province_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                android:contentDescription="Province input"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Postal Code -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_postalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postal Code"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_postalCode_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="4"
                android:importantForAccessibility="yes"
                android:contentDescription="Postal code input"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#71879D"
        android:text="Register"
        android:textColor="@android:color/white"
        android:importantForAccessibility="yes"
        android:contentDescription="Register button"/>

</LinearLayout>
