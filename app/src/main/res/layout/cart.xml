<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CartActivity"
    android:orientation="vertical"> <!-- Use vertical orientation for full screen layout -->

    <!-- Top Section (Header) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_name"
            android:scaleType="centerInside"
            android:layout_marginStart="12dp"/>

        <!-- Title Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thriftique"
            android:fontFamily="@font/poppins"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"> <!-- Ensures content fills the screen if it's too small -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Button and Title in Horizontal Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_backspace_24" />

                <!-- Thrift Cart Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:text="Thrift Cart"
                    android:textColor="#020202"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- CardViews with clothing items -->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <!-- RelativeLayout to position the "X" Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/remove_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Remove Item"
                        android:src="@drawable/close" />

                    <!-- Clothing Item Layout (Image and Text) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/remove_button"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <!-- Clothing Item Image (Larger) -->
                        <ImageView
                            android:id="@+id/item_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user" />

                        <!-- Title and Size Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Clothing Title -->
                            <TextView
                                android:id="@+id/clothing_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Clothing Title"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <!-- Size Text -->
                            <TextView
                                android:id="@+id/clothing_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size: M"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- CheckBox -->
                        <CheckBox
                            android:id="@+id/clothing_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <!-- CardViews with clothing items -->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <!-- RelativeLayout to position the "X" Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/remove_button1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Remove Item"
                        android:src="@drawable/close" />

                    <!-- Clothing Item Layout (Image and Text) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/remove_button1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <!-- Clothing Item Image (Larger) -->
                        <ImageView
                            android:id="@+id/item_image1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user" />

                        <!-- Title and Size Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Clothing Title -->
                            <TextView
                                android:id="@+id/clothing_title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Clothing Title"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <!-- Size Text -->
                            <TextView
                                android:id="@+id/clothing_size1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size: M"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- CheckBox -->
                        <CheckBox
                            android:id="@+id/clothing_checkbox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <!-- CardViews with clothing items -->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <!-- RelativeLayout to position the "X" Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/remove_button2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Remove Item"
                        android:src="@drawable/close" />

                    <!-- Clothing Item Layout (Image and Text) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/remove_button2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <!-- Clothing Item Image (Larger) -->
                        <ImageView
                            android:id="@+id/item_image2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user" />

                        <!-- Title and Size Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Clothing Title -->
                            <TextView
                                android:id="@+id/clothing_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Clothing Title"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <!-- Size Text -->
                            <TextView
                                android:id="@+id/clothing_size2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size: M"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- CheckBox -->
                        <CheckBox
                            android:id="@+id/clothing_checkbox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
